extends _bootstrap

block body
  +navbar("Arduino Tutorials","dropdown_menu")
    +nav_item("/") Home
    +nav_item("/introduction") Einführung in NodeBots
    +nav_item("/jsprimer") Einführung in JavaScript
    +nav_item("/eprimer") Einführung in die Elektronik

  .container
      .starter-template
          h1= markdownFile.title

          != markdownFile.parseContent()

      footer
          hr
          | <strong>Created:</strong> #{markdownFile.created} <br/>
          | <strong>Last modfied:</strong> #{markdownFile.modified} <br/>
          | <strong>Size:</strong> #{markdownFile.size} bytes

